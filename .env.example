# VLN Environment Configuration
# Copy this file to .env.local and fill in your values
# Date: 2026-02-25

# ============================================================================
# NEXTAUTH.JS Configuration
# ============================================================================

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_secret_here_replace_with_openssl_output

# NextAuth URL - Used for OAuth callbacks and session management
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Connection String
# Format: postgresql://user:password@localhost:5432/vln_dev
DATABASE_URL=postgresql://localhost:5432/vln_dev

# ============================================================================
# Authentication Providers
# ============================================================================

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_ID=your_github_app_id
GITHUB_SECRET=your_github_app_secret

# ============================================================================
# Email Service (Resend or SendGrid)
# ============================================================================

# Resend API Key (recommended)
RESEND_API_KEY=your_resend_api_key

# Or use SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Email configuration
EMAIL_FROM=noreply@vln.gg
EMAIL_FROM_NAME=VLN Security

# ============================================================================
# File Storage Configuration
# ============================================================================

# Vercel Blob Storage (recommended for Vercel deployments)
BLOB_READ_WRITE_TOKEN=your_blob_token

# Or use AWS S3
# AWS_S3_BUCKET=your_bucket_name
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================================================
# Stripe Configuration (Phase 2)
# ============================================================================

STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Sentry Configuration (https://sentry.io)
SENTRY_DSN=your_sentry_dsn_url

# ============================================================================
# Analytics
# ============================================================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_analytics_id

# ============================================================================
# Node Environment
# ============================================================================

NODE_ENV=development
